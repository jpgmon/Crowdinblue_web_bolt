---
const currentYear = new Date().getFullYear();
---

<footer class="footer">
  <div class="container">
    <div class="footer-content">
      <div class="footer-logo">
        <img src="/images/logo.svg" alt="CrowdInBlue Logo" width="150" height="35">
        <p>Connecting water projects with the right funding sources</p>
      </div>
      
      <div class="footer-contact">
        <h4>Contact</h4>
        <p><a href="mailto:contact@crowdinblue.org">contact@crowdinblue.org</a></p>
      </div>
    </div>
    
    <div class="footer-bottom">
      <p>&copy; {currentYear} CrowdInBlue. All rights reserved.</p>
      <p class="sustainability">Built with Bolt CMS and hosted ethically in Europe</p>
    </div>
  </div>
</footer>

<style>
  .footer {
    background-color: var(--footer-bg);
    color: var(--footer-text);
    padding: 4rem 0 2rem;
    transition: background-color 0.3s ease, color 0.3s ease;
  }
  
  .footer-content {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 3rem;
    margin-bottom: 3rem;
  }
  
  .footer-logo p {
    margin-top: 1rem;
    opacity: 0.8;
  }
  
  .footer h4 {
    font-size: 1.2rem;
    margin-bottom: 1.5rem;
    position: relative;
    color: var(--footer-text);
  }
  
  .footer h4::after {
    content: '';
    position: absolute;
    bottom: -8px;
    left: 0;
    width: 30px;
    height: 2px;
    background-color: var(--primary);
  }
  
  .footer-contact a {
    color: rgba(255, 255, 255, 0.8);
    transition: color 0.3s ease;
  }
  
  .footer-contact a:hover {
    color: var(--primary);
  }
  
  .footer-bottom {
    padding-top: 2rem;
    border-top: 1px solid var(--border);
    text-align: center;
    font-size: 0.9rem;
    opacity: 0.7;
  }
  
  .sustainability {
    margin-top: 0.5rem;
    font-size: 0.8rem;
  }
  
  @media (max-width: 768px) {
    .footer {
      padding: 3rem 0 1.5rem;
    }
    
    .footer-content {
      gap: 2rem;
    }
  }
</style>
